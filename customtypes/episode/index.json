{
  "format": "custom",
  "id": "episode",
  "label": "episode",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": { "type": "Text", "config": { "label": "title", "placeholder": "" } },
      "uid": { "type": "UID", "config": { "label": "UID" } },
      "chapter_number": { "type": "Number", "config": { "label": "chapter_number", "placeholder": "" } },
      "publish_date": { "type": "Date", "config": { "label": "publish_date", "placeholder": "" } },
      "cover": {
        "type": "Image",
        "config": { "label": "cover", "constraint": { "width": "", "height": null }, "thumbnails": [] }
      },
      "summary": {
        "type": "StructuredText",
        "config": {
          "label": "summary",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "tags",
          "repeat": true,
          "fields": {
            "tag": { "type": "Text", "config": { "label": "tag", "placeholder": "" } }
          }
        }
      },
      "arc": {
        "type": "Select",
        "config": { "label": "arc", "placeholder": "", "options": ["Prologue", "Arc I"], "default_value": "Prologue" }
      },
      "characters": {
        "type": "Group",
        "config": {
          "label": "characters",
          "repeat": true,
          "fields": {
            "character_ref": {
              "type": "Link",
              "config": { "label": "character_ref", "select": "document", "repeat": false, "customtypes": ["character"] }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "episode_text_beat": { "type": "SharedSlice" },
            "episode_panel": { "type": "SharedSlice" },
            "episode_divider": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO": {
      "meta_title": { "type": "Text", "config": { "label": "meta_title", "placeholder": "" } },
      "meta_description": {
        "type": "StructuredText",
        "config": {
          "label": "meta_description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "meta_image": { "type": "Image", "config": { "label": "meta_image", "constraint": {}, "thumbnails": [] } },
      "noindex": {
        "type": "Boolean",
        "config": { "label": "noindex", "placeholder_false": "false", "placeholder_true": "true", "default_value": false }
      }
    }
  }
}